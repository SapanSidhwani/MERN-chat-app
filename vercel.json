{
    "version": 2,
    "builds": [
        {
            "src": "./frontend/dist/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "./backend/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": "./frontend/dist/**/*"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1"
        }
    ]
}